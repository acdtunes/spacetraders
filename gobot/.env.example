# SpaceTraders Environment Variables
# Copy this file to .env and adjust values as needed
#
# Environment variables take precedence over config.yaml
# Use ST_ prefix for SpaceTraders-specific variables

# Database Configuration
# ----------------------
# Use DATABASE_URL for full connection string (no ST_ prefix needed)
DATABASE_URL=postgresql://spacetraders:dev_password@localhost:5432/spacetraders

# Or use individual fields with ST_ prefix
# ST_DATABASE_TYPE=postgres
# ST_DATABASE_HOST=localhost
# ST_DATABASE_PORT=5432
# ST_DATABASE_USER=spacetraders
# ST_DATABASE_PASSWORD=dev_password
# ST_DATABASE_NAME=spacetraders
# ST_DATABASE_SSLMODE=disable

# SQLite (for development/testing)
# ST_DATABASE_TYPE=sqlite
# ST_DATABASE_PATH=./spacetraders.db

# Connection Pool
# ST_DATABASE_POOL_MAX_OPEN=25
# ST_DATABASE_POOL_MAX_IDLE=5
# ST_DATABASE_POOL_MAX_LIFETIME=5m

# SpaceTraders API Configuration
# -------------------------------
# ST_API_BASE_URL=https://api.spacetraders.io/v2
# ST_API_TIMEOUT=30s
# ST_API_RATE_LIMIT_REQUESTS=2
# ST_API_RATE_LIMIT_BURST=10
# ST_API_RETRY_MAX_ATTEMPTS=3
# ST_API_RETRY_BACKOFF_BASE=1s

# Routing Service Configuration (OR-Tools)
# -----------------------------------------
# ST_ROUTING_ADDRESS=localhost:50051
# ST_ROUTING_TIMEOUT_CONNECT=10s
# ST_ROUTING_TIMEOUT_DIJKSTRA=30s
# ST_ROUTING_TIMEOUT_TSP=60s
# ST_ROUTING_TIMEOUT_VRP=120s

# Daemon Configuration
# --------------------
# ST_DAEMON_ADDRESS=localhost:50052
# ST_DAEMON_SOCKET_PATH=/tmp/spacetraders-daemon.sock
# ST_DAEMON_PID_FILE=/tmp/spacetraders-daemon.pid
# ST_DAEMON_MAX_CONTAINERS=100
# ST_DAEMON_HEALTH_CHECK_INTERVAL=30s
# ST_DAEMON_SHUTDOWN_TIMEOUT=30s

# Container Restart Policy
# ST_DAEMON_RESTART_POLICY_ENABLED=true
# ST_DAEMON_RESTART_POLICY_MAX_ATTEMPTS=3
# ST_DAEMON_RESTART_POLICY_DELAY=5s
# ST_DAEMON_RESTART_POLICY_BACKOFF_MULTIPLIER=2.0

# Logging Configuration
# ---------------------
# ST_LOGGING_LEVEL=info
# ST_LOGGING_FORMAT=json
# ST_LOGGING_OUTPUT=stdout
# ST_LOGGING_FILE_PATH=/var/log/spacetraders/daemon.log
# ST_LOGGING_INCLUDE_CALLER=false
# ST_LOGGING_INCLUDE_STACKTRACE=false

# Log Rotation
# ST_LOGGING_ROTATION_ENABLED=true
# ST_LOGGING_ROTATION_MAX_SIZE=100
# ST_LOGGING_ROTATION_MAX_BACKUPS=3
# ST_LOGGING_ROTATION_MAX_AGE=28
# ST_LOGGING_ROTATION_COMPRESS=true

# CLI Socket Path (for client commands)
# --------------------------------------
SPACETRADERS_SOCKET=/tmp/spacetraders-daemon.sock
